@{
    ViewBag.Title = HomePageResource.WebAppTitle;
}

<section id="hero" class="py-12" data-img="/assets/back.png">
    <div class="container py-4">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-6">
                <div class="py-2 pe-lg-5">
                    <h1 class="fs-48 fw600">@HomePageResource.HomeTitleOne</h1>
                    <div class="fs-16 pt-2">@HomePageResource.HomeDescription</div>
                    <div class="pt-3">
                        <span class="nav-link p-0 m-0">
                            <a class="border-0 bg-secondarycolor hover-bg-primarycolor color-white hover-color-white btn-padding rounded hover-boxshadow fs-16 d-inline-block hover-moveup" href="@Url.Action("register","account")">@HomePageResource.SignUp</a>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <img src="~/assets/hero.png" class="img-fluid text-start" style="width:90%;" alt="">
            </div>
        </div>
    </div>
</section>
